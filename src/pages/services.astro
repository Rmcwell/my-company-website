---
// src/pages/services.astro
import Layout from "../layouts/Layout.astro";
import Heading from "../components/ui/Heading.astro";
import Text from "../components/ui/Text.astro";
import Section from "../components/ui/Section.astro";
import Button from "../components/ui/Button.astro";
import SectionLabel from "../components/ui/SectionLabel.astro";
import {
  Monitor,
  Search,
  Settings,
  Check,
} from "lucide-astro";

interface ServiceFeature {
  icon: any;
  title: string;
  description: string;
  features: string[];
  target: string;
}

const services: ServiceFeature[] = [
  {
    icon: Monitor,
    title: "Custom Website Development",
    description:
      "Bespoke websites built from the ground up to match your brand and business goals perfectly.",
    features: [
      "Responsive Design",
      "CMS Integration",
      "Accessibility Compliance",
      "Fast Loading Speeds",
    ],
    target: "Businesses needing a unique digital presence.",
  },
  {
    icon: Search,
    title: "Performance & SEO",
    description:
      "Technical optimization to ensure your site ranks high and loads instantly on any device.",
    features: [
      "Core Web Vitals",
      "Technical SEO",
      "Speed Optimization",
      "Analytics Setup",
    ],
    target: "Sites struggling with visibility or speed.",
  },
  {
    icon: Settings,
    title: "Maintenance & Support",
    description:
      "Ongoing care to keep your digital assets secure, updated, and running smoothly.",
    features: [
      "Security Updates",
      "Content Updates",
      "Bug Fixes",
      "Performance Monitoring",
    ],
    target: "Companies wanting peace of mind.",
  },
];
---

<Layout>
  <Section bg="navy" class="text-center">
    <div
      class="absolute inset-0 opacity-12 bg-[url('https://www.transparenttextures.com/patterns/white-wave.png')]"
    >
    </div>
    <SectionLabel>Our Services</SectionLabel>
    <Heading as="h1" class="text-white mb-6">
      Expertise That Runs Deep
    </Heading>
    <Text class="mb-10">
      Comprehensive digital solutions tailored to your specific needs. We don't
      just build; we partner in your success.
    </Text>
    <!-- Wave Divider -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0]">
      <svg
        class="relative block w-full h-24"
        viewBox="0 0 1440 320"
        preserveAspectRatio="none"
      >
        <path
          fill="#FFFFFF"
          d="M0,160L48,176C96,192,192,224,288,213.3C384,203,480,149,576,149.3C672,149,768,203,864,218.7C960,235,1056,213,1152,186.7C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
        ></path>
      </svg>
    </div>
  </Section>

  <Section>
    <div class="space-y-24">
      {
        services.map((service, index) => (
          <div
            class={`flex flex-col ${index % 2 === 1 ? "lg:flex-row-reverse" : "lg:flex-row"} gap-12 items-center`}
          >
            <div class="flex-1">
              <h2 class="text-3xl font-bold text-navy mb-4">{service.title}</h2>
              <p class="text-lg text-slate-600 mb-6 leading-relaxed">
                {service.description}
              </p>

              <div class="bg-slate-50 p-6 rounded-lg border border-slate-100 mb-8">
                <h4 class="font-bold text-navy mb-4 text-sm uppercase tracking-wide">
                  What's Included:
                </h4>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                  {service.features.map((feature, i) => (
                    <div class="flex items-center space-x-2">
                      <Check class="h-4 w-4 text-gold" />
                      <span class="text-slate-700 text-sm">{feature}</span>
                    </div>
                  ))}
                </div>
              </div>

              <div class="flex items-center justify-between border-t border-slate-100 pt-6">
                <div class="text-sm text-slate-500">
                  <span class="font-semibold text-navy">Best for:</span>{" "}
                  {service.target}
                </div>
                <a href="/contact">
                  <Button variant="outline" size="sm">
                    Request Pricing
                  </Button>
                </a>
              </div>
            </div>

            <div class="flex-1 w-full">
              <div class="aspect-video bg-slate-100 rounded-lg shadow-lg overflow-hidden relative group">
                <div class="absolute inset-0 bg-navy/5 group-hover:bg-transparent transition-colors duration-500" />
                {/* Placeholder for service illustration */}
                <div class="w-full h-full flex items-center justify-center bg-slate-200 text-slate-400">
                  <service.icon class="h-24 w-24 opacity-20" />
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </Section>

  <!-- Call to Action -->
  <Section bg="teal" class="md:pb-1">
    <div class="max-w-4xl mx-auto px-4 text-center relative z-10">
      <Heading class="mb-6 text-white"> Ready to start your journey? </Heading>
      <p class="text-xl text-white/90 mb-10">
        Let's discuss your project and create a custom roadmap tailored to your
        needs.
      </p>
      <a href="/contact">
        <Button variant="secondary" size="lg" withArrow>
          Get Started Today
        </Button>
      </a>
    </div>
  </Section>
</Layout>
