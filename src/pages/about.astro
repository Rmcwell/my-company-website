---
import Layout from "../layouts/Layout.astro";
import Heading from "../components/ui/Heading.astro";
import Text from "../components/ui/Text.astro";
import Section from "../components/ui/Section.astro";
import SectionLabel from "../components/ui/SectionLabel.astro";

const coreValues = [
  {
    icon: "compass",
    title: "Clarity",
    desc: "We value transparent communication and clear code.",
  },
  {
    icon: "anchor",
    title: "Reliability",
    desc: "We build systems you can depend on, 24/7.",
  },
  {
    icon: "map",
    title: "Strategy",
    desc: "We plan before we build, ensuring every line of code has a purpose.",
  },
  {
    icon: "wind",
    title: "Agility",
    desc: "We adapt to changes quickly without losing our course.",
  },
];
---

<Layout>
  <Section bg="navy" class="text-center">
    <div
      class="absolute inset-0 opacity-12 bg-[url('https://www.transparenttextures.com/patterns/white-wave.png')]"
    >
    </div>
    <SectionLabel>About Us</SectionLabel>
    <Heading as="h1" class="text-white mb-6">
      Navigators of the Digital Realm
    </Heading>
    <Text class="text-slate-300">
      We are a team of engineers, designers, and strategists dedicated to
      building the web's future.
    </Text>
    <!-- Wave Divider -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0]">
      <svg
        class="relative block w-full h-24"
        viewBox="0 0 1440 320"
        preserveAspectRatio="none"
      >
        <path
          fill="#F8FAFC"
          d="M0,160L48,176C96,192,192,224,288,213.3C384,203,480,149,576,149.3C672,149,768,203,864,218.7C960,235,1056,213,1152,186.7C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
        ></path>
      </svg>
    </div>
  </Section>

  <Section>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div>
        <Heading class="mb-6">Our Philosophy</Heading>
        <Text class="mb-6">
          At MaritimeDev, we believe that great software is like a well-built
          ship: it needs to be robust enough to weather storms, efficient enough
          to travel far, and designed with the crew (users) in mind.
        </Text>
        <Text class="mb-6">
          We don't chase trends for the sake of it. We focus on proven
          technologies, clean code, and sustainable architecture. We build for
          the long horizon, not just the next port.
        </Text>
        <div class="grid grid-cols-2 gap-6 mt-8">
          <div class="p-4 bg-slate-50 rounded-lg border border-slate-100">
            <div class="text-3xl font-bold text-teal mb-1">10+</div>
            <div class="text-sm text-slate-600">Years Experience</div>
          </div>
          <div class="p-4 bg-slate-50 rounded-lg border border-slate-100">
            <div class="text-3xl font-bold text-teal mb-1">100%</div>
            <div class="text-sm text-slate-600">Client Retention</div>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-4">
        <img
          src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?auto=format&fit=crop&q=80&w=500"
          class="rounded-lg shadow-lg mt-8"
          alt="Team meeting"
        />
        <img
          src="https://images.unsplash.com/photo-1531482615713-2afd69097998?auto=format&fit=crop&q=80&w=500"
          class="rounded-lg shadow-lg"
          alt="Coding"
        />
      </div>
    </div>
  </Section>

  <Section bg="light" paddingBottom>
    <div class="text-center max-w-3xl mx-auto mb-16">
      <Heading>Core Values</Heading>
      <Text class="mt-4"> The compass points that guide our decisions. </Text>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        coreValues.map((value) => (
          <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
            <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-full bg-blue-100">
              {value.icon === "compass" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-blue-600"
                >
                  <circle cx="12" cy="12" r="10" />
                  <polygon points="16.24 7.76 14.12 14.12 7.76 16.24 9.88 9.88 16.24 7.76" />
                </svg>
              )}
              {value.icon === "anchor" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-blue-600"
                >
                  <circle cx="12" cy="5" r="3" />
                  <line x1="12" x2="12" y1="22" y2="8" />
                  <path d="M5 12H2a10 10 0 0 0 20 0h-3" />
                </svg>
              )}
              {value.icon === "map" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-blue-600"
                >
                  <polygon points="3 6 9 3 15 6 21 3 21 18 15 21 9 18 3 21" />
                  <line x1="9" x2="9" y1="3" y2="18" />
                  <line x1="15" x2="15" y1="6" y2="21" />
                </svg>
              )}
              {value.icon === "wind" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-blue-600"
                >
                  <path d="M17.7 7.7a2.5 2.5 0 1 1 1.8 4.3H2" />
                  <path d="M9.6 4.6A2 2 0 1 1 11 8H2" />
                  <path d="M12.6 19.4A2 2 0 1 0 14 16H2" />
                </svg>
              )}
            </div>
            <h3 class="mb-2 text-xl font-semibold text-gray-900">
              {value.title}
            </h3>
            <p class="text-gray-600">{value.desc}</p>
          </div>
        ))
      }
    </div>
  </Section>
</Layout>
