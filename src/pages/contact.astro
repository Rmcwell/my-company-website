---
import Layout from "../layouts/Layout.astro";
import Heading from "../components/ui/Heading.astro";
import Text from "../components/ui/Text.astro";
import Section from "../components/ui/Section.astro";
import SectionLabel from "../components/ui/SectionLabel.astro";
import ContactForm from "../components/ContactForm.astro";
import { Mail, Phone } from "lucide-astro";
---

<Layout>
  <Section bg="navy" class="text-center">
    <div
      class="absolute inset-0 opacity-12 bg-[url('https://www.transparenttextures.com/patterns/white-wave.png')]"
    >
    </div>
    <SectionLabel>Contact Us</SectionLabel>
    <Heading as="h1" class="text-white mb-6"> Let's Talk Business </Heading>
    <Text class="text-slate-300 mb-10">
      Ready to start your project? Fill out the form below or book a call
      directly.
    </Text>
    <!-- Wave Divider -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-[0]">
      <svg
        class="relative block w-full h-24"
        viewBox="0 0 1440 320"
        preserveAspectRatio="none"
      >
        <path
          fill="#F8FAFC"
          d="M0,160L48,176C96,192,192,224,288,213.3C384,203,480,149,576,149.3C672,149,768,203,864,218.7C960,235,1056,213,1152,186.7C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
        ></path>
      </svg>
    </div>
  </Section>

  <Section bg="light">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      <div>
        <Heading class="mb-6">Get in Touch</Heading>
        <Text class="mb-8">
          We typically respond within 24 hours. No sales pressure, just a
          conversation about how we can help.
        </Text>

        <div class="space-y-8 mb-12">
          <a href="mailto:info@docksideweb.com" class="group flex items-start space-x-4 block no-underline">
            <div class="bg-teal/10 p-3 rounded-lg transition-colors group-hover:bg-yellow-500/10">
              <Mail
                class="h-6 w-6 text-teal transition-colors group-hover:text-gold"
              />
            </div>
            <div>
              <h4 class="font-bold text-navy">Email Us</h4>
              <p>
                info@docksideweb.com
              </p>
            </div>
          </a>

          <a href="mailto:info@docksideweb.com" class="group flex items-start space-x-4 block no-underline">
            <div class="bg-teal/10 p-3 rounded-lg transition-colors group-hover:bg-yellow-500/10">
              <Phone
                class="h-6 w-6 text-teal transition-colors group-hover:text-gold"
              />
            </div>
            <div>
              <h4 class="font-bold text-navy">Call Us</h4>
              <p>
                +1 (443) 844-7850
              </p>
            </div>
          </a>
        </div>
      </div>
      <ContactForm />
    </div>
  </Section>
</Layout>
