---
import { Check, Plus } from "lucide-astro";

type Plan = {
  name: string;
  price: string;
  payment: string;
  description: string;
  features: string[];
  optionalFeatures: string[];
  highlighted: boolean;
};

const pricingPlans: Plan[] = [
  {
    name: "Monthly",
    price: "$150",
    payment: "Per Month",
    description:
      "Best for businesses that want a professional site with zero upfront cost.",
    features: [
      "Custom website (up to 6 pages)",
      "Unlimited minor content edits*",
      "Hosting, domain, & SSL",
      "2–3 business day turnaround",
      "$100 one-time fee per page after the first 6",
    ],
    optionalFeatures: [],
    highlighted: true
  },
  {
    name: "One-Time Website Build",
    price: "$2,500",
    payment: "One Time Cost",
    description:
      "Ideal for established businesses that want full ownership and no monthly commitment.",
    features: [
      "Custom website (up to 6 pages)",
      "$100 one-time fee per page after the first 6",
    ],
    optionalFeatures: [
      "Optional $75/month website care plan",
      "Hosting, domain, & SSL",
      "Unlimited minor content edits*",
      "2–3 business day turnaround",
    ],
    highlighted: false
  },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
  {
    pricingPlans.map((plan) => (
      <div
        class={`relative bg-light rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 flex flex-col h-full ${
          plan.highlighted
            ? "border-4 border-teal-500"
            : "border border-slate-200"
        }`}
      >
        {plan.highlighted && (
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
            <span class="bg-teal-500 text-white px-4 py-1 rounded-full text-sm font-bold">
              Most Popular
            </span>
          </div>
        )}

        <div class="p-8 flex-1">
          <h3 class="text-2xl font-bold text-slate-900 mb-2">{plan.name}</h3>
          <p class="text-slate-600 text-sm mb-6">{plan.description}</p>

          <div class="mb-6">
            <span class="text-5xl font-bold text-slate-900">{plan.price}</span>
            {plan.price !== "Custom" && (
              <span class="text-slate-600 ml-2">{plan.payment}</span>
            )}
          </div>

          <a href="/contact">
            <button
              class={`w-full mb-8 px-6 py-3 rounded-lg font-semibold transition-all duration-200 cursor-pointer ${
                plan.highlighted
                  ? "bg-teal-500 text-white hover:bg-teal-600"
                  : "border-2 border-teal-500 text-teal-500 hover:bg-teal-50"
              }`}
            >
              Get Started
            </button>
          </a>

          <div class="space-y-4">
            <div class="text-sm font-bold text-slate-900 uppercase tracking-wide mb-4">
              What's Included:
            </div>
            {plan.features.map((feature) => (
              <div class="flex items-start space-x-3">
                <Check class="h-5 w-5 text-gold shrink-0 mt-0.5" />
                <span class="text-slate-600 text-sm">{feature}</span>
              </div>
            ))}
            {plan.optionalFeatures.length > 0 && (
              <>
                <div class="border-t border-slate-200 my-4" />
                {plan.optionalFeatures.map((feature) => (
                  <div class="flex items-start space-x-3">
                    <Plus class="h-5 w-5 text-teal shrink-0 mt-0.5" />
                    <span class="text-slate-600 text-sm">{feature}</span>
                  </div>
                ))}
              </>
            )}
          </div>
        </div>
      </div>
    ))
  }
</div>
<span class="text-slate-500 text-sm text-center block px-8 mt-8">
  * Minor edits have a 2-3 business day turnaround and include text and image
  updates only; no new pages or structural layout changes.
</span>
