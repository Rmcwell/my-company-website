---
interface Props {
    class?: string;
    bg?: "white" | "light" | "navy";
    id?: string;
}

const { class: className = "", bg = "white", id } = Astro.props;

const bgStyles = {
    white: "bg-white",
    light: "bg-slate-50",
    navy: "bg-navy text-white",
};

const sectionClasses = `py-16 md:py-24 ${bgStyles[bg]} ${className}`;
---

<section id={id} class={sectionClasses}>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <slot />
    </div>
</section>
