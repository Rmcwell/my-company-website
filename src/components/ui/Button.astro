---
import { ArrowRight } from "lucide-astro";

interface Props {
    variant?: "primary" | "secondary" | "outline" | "ghost";
    size?: "sm" | "md" | "lg";
    withArrow?: boolean;
    class?: string;
    type?: "button" | "submit" | "reset";
    id?: string;
}

const {
    variant = "primary",
    size = "md",
    withArrow = false,
    class: className = "",
    type = "button",
    id = "",
    ...rest
} = Astro.props;

const baseStyles =
    "inline-flex items-center justify-center font-medium transition-all duration-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-offset-2 hover:scale-[1.02] active:scale-[0.98]";

const variants = {
    primary:
        "bg-teal text-white hover:bg-teal-hover focus:ring-teal shadow-md hover:shadow-lg border border-transparent cursor-pointer",
    secondary:
        "bg-navy text-white hover:bg-navy-light focus:ring-navy shadow-md hover:shadow-lg border border-transparent cursor-pointer",
    outline:
        "bg-transparent text-teal border-2 border-teal hover:bg-white hover:text-teal focus:ring-teal cursor-pointer",
    ghost: "bg-transparent text-navy hover:bg-slate-100 hover:text-navy-light focus:ring-navy cursor-pointer",
};

const sizes = {
    sm: "text-sm px-4 py-2",
    md: "text-base px-6 py-3",
    lg: "text-lg px-8 py-4",
};

const buttonClasses = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;
---

<button id={id} type={type} class={buttonClasses} {...rest}>
    <slot />
    {withArrow && <ArrowRight class="ml-2 h-4 w-4" />}
</button>
