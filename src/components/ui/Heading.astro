---
interface Props {
  as?: "h1" | "h2" | "h3" | "h4";
  class?: string;
}

const { as = "h2", class: className = "" } = Astro.props as Props;

const styles = {
  h1: "text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight leading-tight",
  h2: "text-3xl md:text-4xl font-bold tracking-tight leading-snug",
  h3: "text-2xl md:text-3xl font-semibold leading-snug",
  h4: "text-xl md:text-2xl font-semibold leading-snug",
} as const;

const headingClasses = `${styles[as]} text-navy ${className}`;
---

{
    as === "h1" && (
        <h1 class={headingClasses}>
            <slot />
        </h1>
    )
}
{
    as === "h2" && (
        <h2 class={headingClasses}>
            <slot />
        </h2>
    )
}
{
    as === "h3" && (
        <h3 class={headingClasses}>
            <slot />
        </h3>
    )
}
{
    as === "h4" && (
        <h4 class={headingClasses}>
            <slot />
        </h4>
    )
}
