---
import {
  Anchor,
  Mail,
  Phone,
  MapPin,
} from "lucide-astro";

const currentYear = new Date().getFullYear();

const navigationLinks = ["Home", "Services", "Work", "Process", "About"];
const serviceLinks = [
  "Web Development",
  "SEO & Performance",
  "Maintenance & Support",
];
---

<div class="w-full bg-white">
  <div class="relative w-full overflow-hidden bg-teal">
    <svg
      class="relative block w-full h-[100px] md:h-[300px]"
      style="z-index: 1"
      viewBox="0 0 1440 320"
      preserveAspectRatio="xMidYMid slice"
    >
      <!-- WAVE LAYERS -->
      <!-- Background Wave (Lightest - Furthest/Horizon) -->
      <path
        fill="#91C9CF"
        d="M0,180 C360,150 1080,210 1440,180 L1440,320 L0,320 Z"></path>

      <path
        fill="#5197A6"
        d="M0,200 C240,160 480,240 720,200 C960,160 1200,240 1440,200 L1440,320 L0,320 Z"
      ></path>

      <image
        href="/assets/lighthouse.svg"
        class="scale-x-[-1]"
        x="220"
        y="20"
        width="200"
        height="200"
        style="transform: scale(0.75); transform-origin: center bottom;"
      />

      <path
        fill="#224769"
        d="M0,230 C180,260 360,200 540,230 C720,260 900,200 1080,230 C1260,260 1350,220 1440,230 L1440,320 L0,320 Z"
      ></path>

      <!-- Foreground Wave (Darkest - Closest, Matches beginning of gradient for ooter) -->
      <path
        fill="#1e3556"
        d="M0,260 C240,240 480,280 720,260 C960,240 1200,280 1440,260 L1440,320 L0,320 Z"
      ></path>
    </svg>
  </div>

  <footer
    class="relative bg-gradient-to-b from-[#1e3556] to-[#1A304d] text-white pb-8 -mt-1"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
        <div class="space-y-4">
          <div class="flex items-center space-x-2">
            <Anchor class="h-6 w-6 text-gold" />
            <span
              class="text-xl font-heading font-bold text-white tracking-wide"
            >
              <span class="text-teal-400">DOCKSIDE </span>WEB
            </span>
          </div>
          <p class="text-slate-400 text-sm leading-relaxed">
            Precision hand-coded websites built for small business performance.
            Your dedicated partner in navigating the digital landscape.
          </p>
        </div>

        <div>
          <h4 class="text-gold font-bold uppercase tracking-wider text-sm mb-6">
            Navigation
          </h4>
          <ul class="space-y-3">
            {
              navigationLinks.map((item) => (
                <li>
                  <a
                    href={item === "Home" ? "/" : `/${item.toLowerCase()}`}
                    class="text-slate-300 hover:text-teal-400 transition-colors text-sm"
                  >
                    {item}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div>
          <h4 class="text-gold font-bold uppercase tracking-wider text-sm mb-6">
            Services
          </h4>
          <ul class="space-y-3">
            {
              serviceLinks.map((item) => (
                <li>
                  <a
                    href="/services"
                    class="text-slate-300 hover:text-teal-400 transition-colors text-sm"
                  >
                    {item}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div>
          <h4 class="text-gold font-bold uppercase tracking-wider text-sm mb-6">
            Contact
          </h4>
          <ul class="space-y-4">
            <li class="flex items-start space-x-3 text-slate-300 text-sm">
              <Mail class="h-5 w-5 text-teal-400 shrink-0" />
              <a href="mailto:info@docksideweb.com" class="hover:text-teal-400">
                info@docksideweb.com
              </a>
            </li>
            <li class="flex items-start space-x-3 text-slate-300 text-sm">
              <Phone class="h-5 w-5 text-teal-400 shrink-0" />
              <a href="tel:+14438447850" class="hover:text-teal-400">
                +1 (443) 844-7850
              </a>
            </li>
            <li class="flex items-start space-x-3 text-slate-300 text-sm">
              <MapPin class="h-5 w-5 text-teal-400 shrink-0" />
              <span>Baltimore, MD</span>
            </li>
            <li class="flex items-start space-x-3 text-slate-300 text-sm">
              <MapPin class="h-5 w-5 text-teal-400 shrink-0" />
              <span>Charleston, SC</span>
            </li>
          </ul>
        </div>
      </div>

      <div
        class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center"
      >
        <p class="text-slate-500 text-sm">
          Â© {currentYear} Dockside Web Solutions. All rights reserved.
        </p>
        <div class="flex space-x-3 mt-4 md:mt-0">
          <a
            href="/legal/privacy-policy"
            class="text-slate-400 hover:text-yellow-500 transition-colors"
            aria-label="Privacy Policy"
          >
            <p>Privacy Policy</p>
          </a>
          <p class="text-slate-400">|</p>
          <a
            href="/legal/terms-of-service"
            class="text-slate-400 hover:text-yellow-500 transition-colors"
            aria-label="Terms of Service"
          >
            <p>Terms of Service</p>
          </a>
        </div>
      </div>
    </div>
  </footer>
</div>
